<h1>Rotten Mangoes</h1>
<%= link_to "Submit a movie!", new_movie_path %>


<%= form_tag(movies_path, method: "get") do %>
  <div>
    <%= label_tag "search" %> <br/>
    <%= text_field_tag "search" %>
  </div>

  <div>
    <%= select_tag(:duration, options_for_select([['Any duration', 'any'], ['Under 90 minutes', 'under_niney'], ['Between 90 and 120 minutes', 'mid_length'], ['Over 120 minutes', 'over_120']])) %>
  </div>

  <div><%= submit_tag "Search" %></div>
<% end %>

<hr>

<%= render partial: "movie", collection: @movies %>