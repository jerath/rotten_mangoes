<h1> YO ADMIN</h1>

<table>
  <tr>
    <th> First </th>
    <th> Last </th>
    <th> Email </th>
    <th> Created at </th>
    <th> Admin? </th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.firstname%></td> 
      <td><%= user.lastname %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at %></td>
      <td><%= user.admin %> </td>
      <td><%= link_to "Edit", edit_admin_user_path(user.id) %> </td>
      <td><%= link_to "Delete", admin_user_path(user.id), method: :delete %> </td>
    <tr>
  <% end %>
</table>
<%= paginate @users %>

<%= link_to "Create user", new_admin_user_path %>